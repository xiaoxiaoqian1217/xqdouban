/* board.wxss */
page{
   width: 100%;
  height:100%;
  display: flex;
  flex-direction: column;
}
.container{
  width: 100%;
  height: 100%;
display: flex;
flex-direction: column;
padding: 0
}
.container .slider{

  width: 100%;
  height: 400rpx
  /*容器的高必须得设置  */
}
.container .slider swiper{
  height: 400rpx
}

.container .slider swiper image{
  width: 100%
  
}
.board{
  display: flex;
background-color: #f6f6f6;
  flex-direction: column;
    height: 100%;
    /* 必须给竖向设置高度 */

}
.board .board-item{
 
 flex: 1;
 margin: 20rpx 40rpx;
 
 display: flex;
 flex-direction: column;
background: #fff;

}
.board .board-item .title navigator{
  display: flex;
  justify-content: space-between;
  font-size:20rpx;
  padding:10rpx;
  
  box-sizing:border-box;

}
.board .board-item .title image{
  width:20rpx;
  height:20rpx;
}

.board .board-item .movies{
  flex:1;
   white-space: nowrap;  
  


}
.board .board-item .movie{
 display:inline-block;
 margin:10rpx;

}

.board .board-item .movie image{
 width:250rpx;
  height:300rpx;
}



.board .board-item  text{

  color: #c0c0c0;
  font-weight: bold
}
