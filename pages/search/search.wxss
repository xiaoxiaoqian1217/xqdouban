/* pages/search/search.wxss */
/*1px=375/750=2rpx  */
page{
  width: 100%;
  height:100%;
  display: flex;
  flex-direction: column;
  background-color: #f9f9f9;
}
.search{
  flex: 1;
   display: flex; 
   flex-direction: column;
   box-sizing: border-box;

}
.header{
display: flex;
border-bottom: 1px solid #ccc ;
justify-content: center;
  
}
.header input{
 padding:20rpx 40rpx ; 
text-align: center;
color:#ccc;

}
.tips view{
  padding-top:40rpx;
text-align:center;
color:#ccc;
}
.list{
  flex: 1;
  display: flex;
  flex-direction: column;

}
.list .item{
  flex: 1;
  display: flex;
  border-bottom: 1px solid #ccc;
  padding: 20rpx 40rpx
}
.list .item .poster{
width:128rpx;
height: 168rpx;
margin-right:20rpx 
}
.list .item .meta{

  flex: 1 
   /* 必须设置meta占一份，不然图片大小还不一致 */
}
.list .item .meta .title,
.list .item .meta .sub-title{
display: block

}
.list .item .meta .title{
font-size: 32rpx;


}
.list .item .meta .sub-title{
font-size: 24rpx;
margin: 20rpx 0;
  color: #c0c0c0;
}
.list .item .meta .artists{
font-size: 28rpx;
color: #999
}
.list .item .rating{
   background-color: rgba(247, 76, 49, 0.8);
  color: #fff;
  font-weight: bold;
  background: red;
  height: 40rpx;
  width: 60rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items:center

}
.list .movies .tips view{
	display:flex;
	flex-direction:column;
	justify-content:center;
	align-items:center;
}
.list .movies .tips image{
 width:200rpx;
 height:200rpx;
}

