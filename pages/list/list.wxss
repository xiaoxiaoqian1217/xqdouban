/* list.wxss */
page{
	height:100%;
	width:100%;
	background-color:#f9f9f9
}
.list{
	display:flex;
	flex-direction: column;
	width:100%;
	height:100%;

}
.list .type{
	display:flex;
	justify-content:center;
	padding:10rpx;
	 border-bottom: 1px solid #ccc;
}
.list  .movies{
	display:flex;
	flex-direction:column;
	height:100%;
}
.list .movies .item{
	
	display:flex;
	flex:1;
	padding:20rpx 40rpx;
	justify-content:spact-between;
	 border-bottom: 1px solid #ccc;
}
.list .movies .item image{
width:160rpx;
height:250rpx;
}
.list .movies .item .meta{
     margin-left:10rpx;
flex:1;
display:flex;
	flex-direction:column;


}
.list .movies .item .meta .title{

	font-size:28rpx;

}
.list .movies .item .meta .sub-title{
	font-size:22rpx;
	margin:20rpx 0rpx;
}
.list .movies .item .meta .artists{
	font-size:26rpx;
}
.list .movies .item .rating text{
  width:80rpx;
  height :40rpx;
  
background-color: rgba(247, 76, 49, 0.8);
  color: #fff;
  font-weight: bold;
  border-radius: 20rpx;
  font-size:24rpx;
  display:flex;
  justify-content:center;
  align-items:center;

}
.list .movies .tips view{
	display:flex;
	flex-direction:column;
	justify-content:center;
	align-items:center;
}
.list .movies .tips image{
 width:200rpx;
 height:200rpx;
}
