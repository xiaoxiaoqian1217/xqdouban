/* item.wxss */
page{
	height:100%;
	width:100%;
  background-color: #f9f9f9;
	
}
.background{
position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  z-index: -1000;
  opacity: .1;	
  
}

.content{
	padding:80rpx;

}
.content .scroll{
  height: 100%;
	display:flex;
	flex-direction: column;
}
.content .poster{
	width:100%;
	height:800rpx;
}
.meta{
	font-size:24rpx;
	display:flex;
	flex-direction:column;
}

.meta text{
 margin-top:40rpx;
 color: #888;

}
.meta .title{
	font-size:40rpx;
	font-weight:bold;
	text-align:center;
}
.scroll .summary{

	margin-top:80rpx;
	display:flex;
	flex-direction:column;
}
.scroll .summary .label{
	font-size:40rpx;
	font-weight:bold;
}
.scroll .summary .article{
	font-size:24rpx;
	color: #666;
	padding: 20rpx;
}